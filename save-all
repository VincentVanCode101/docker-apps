#!/usr/bin/env bash
set -euo pipefail

PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

images=()
for cfg in "$PROJECT_ROOT"/*/config.sh; do
    source "$cfg"
    images+=("$IMAGE_TAG")
done

out="$PROJECT_ROOT/docker-apps-$(date +%Y%m%d).tar"
echo "Saving ${#images[@]} images â†’ $out"
docker save "${images[@]}" -o "$out"

gzip -f "$out"
echo "-> ${out}.gz"
